<div class="header d-print-none">
    <div class="header-container">
        <div class="header-left">
            <div class="navigation-toggler">
                <a href="#" data-action="navigation-toggler">
                    <i data-feather="menu"></i>
                </a>
            </div>
            <div class="header-logo">
                <a href="/">
                    <img class="logo" src="/themes/<%- page.theme %>/public/images/logo.svg?v=<%- page.ver %>" alt="Logo">
                </a>
            </div>
        </div>
        <div class="header-body">
            <div class="header-body-left">
                <ul class="navbar-nav">
                    <li class="nav-item" style="width: 100%;">
                        <div class="header-search-form">
                            <form action="/<%- page.urls.search %>" method="get">
                                <input type="submit" style="display: none">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <button class="btn">
                                            <i data-feather="search"></i>
                                        </button>
                                    </div>
                                    <input type="text" name="q" class="form-control" placeholder="<%- page.l.search %>"
                                           data-autocomplete="desktop" onkeydown="cinemaSearch(this)">
                                    <script>function cinemaSearch(e) {if(event.key === 'Enter') {window.location.href='/<%- page.urls.search %>?q='+encodeURIComponent(e.value);}}</script>
                                    <div class="input-group-append">
                                        <button class="btn header-search-close-btn">
                                            <i data-feather="x"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="cinemapress-autocomplete" data-autocomplete="desktop"></div>
                            </form>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="header-body-right">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="#" class="nav-link mobile-header-search-btn" title="<%- page.l.search %>">
                            <i data-feather="search"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <div class="randomMovieMenu" style="display:none">
                            <a href="/?random=<%- Math.random() %>" class="nav-link cinemapress-random-menu"
                               title="<%- page.l.lucky %>">
                                <i data-feather="wind"></i>
                            </a>
                        </div>
                    </li>
                    <li class="nav-item continueViewingBlock" style="display:none">
                        <a href="javascript:void(0)" class="nav-link" id="continueViewing"
                           title="<%- page.l.continue %>?">
                            <i data-feather="bookmark"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link" data-sidebar-target="#viewed" title="<%- page.l.watched %>">
                            <i data-feather="eye"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link" title="Fullscreen" data-toggle="fullscreen">
                            <i class="maximize" data-feather="maximize"></i>
                            <i class="minimize" data-feather="minimize"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item header-toggler">
                <a href="#" class="nav-link">
                    <i data-feather="arrow-down"></i>
                </a>
            </li>
        </ul>
    </div>
</div>